{
    "mcpServers": {
        "devops-mcp": {
			"command": "dotnet",
			"args": [
				"run",
				"--project",
				"src/MCP/DevopsMCP/DevopsMCP.csproj",
				"--launch-profile",
				"console"
			],
			"env": {
				"ASPNETCORE_ENVIRONMENT": "Development"
			},
			"type": "stdio"
		},
		"appinsights": {
            "command": "dotnet",
            "args": [
                "run",
                "--project",
                "src/MCP/AppInsightsMCP",
				"--launch-profile",
				"console"
            ],
            "env": {
                "DOTNET_ENVIRONMENT": "Development"
            }
        }
    }
}
